@model IEnumerable<Domain.Categorie_materiel>

@{
    ViewBag.Title = "GetCategorie_materiel";
}

<h2>Liste des categories materiels</h2>


<!-- Start Row -->
<div class="row">
    <!-- Start Panel -->
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-title">
            
            </div>
            <div class="panel-body table-responsive">
                <table id="example0" class="table display">
                    <thead>
                        <tr>
                           
                            <th>Nom categorie</th>
                            <th>Description</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tfoot>
                        <tr>
                         
                            <th>Nom categorie</th>
                             <th>Description</th>
                            <th>Action</th>

                        </tr>
                    </tfoot>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                            
                                <td class="center">@item.libelle</td>
                                <td class="center">@item.Description </td>


                                <td>

                                    <a href="@Url.Action("EditCategorie_materiel", new { id = item.Id_categorie })">&nbsp;<i class="fa fa-edit" title="Modifer"></i></a>
                                     </td>

                            </tr>


                        }
                    </tbody>
                </table>
                <br /><p>
                    @Html.ActionLink("Ajouter une nouvelle Categorie", "CreateCategorie_materiel")
                </p>

            </div>
        </div>
    </div>


</div>





<script>
    $(document).tooltip();
</script>