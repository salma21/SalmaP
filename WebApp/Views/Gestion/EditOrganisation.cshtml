@model Domain.Organisation

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-title">
                Ajout d'organisation
            </div>
            <div class="panel-body">



                <div class="panel panel-default">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4>Organisation</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.idOrganisation)

                            <div class="form-group">
                                <label class="control-label col-lg-4" style="font-style:oblique;">Nom </label>
                                <div class="col-lg-6">

                                    @Html.TextBoxFor(model => model.libelle, new { @class = "form-control", required = "True" })
                                    @Html.ValidationMessageFor(model => model.libelle, String.Empty, new { @class = "test" })
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="control-label col-lg-4" style="font-style:oblique;">Description </label>
                                <div class="col-lg-6">

                                    @Html.TextBoxFor(model => model.description, new { @class = "form-control", required = "True" })
                                    @Html.ValidationMessageFor(model => model.description, String.Empty, new { @class = "test" })
                                </div>
                            </div>


                        </div>
                        <div style="text-align: center;">
                            <input type="submit" value="Valider" class="btn btn-default" />

                            <button type="reset" class="btn btn-white">Annuler</button>

                        </div>
                    }
                </div>

                <div>
                    @Html.ActionLink("List", "GetOrganisation")
                </div>

            </div>
        </div>
    </div>
</div>