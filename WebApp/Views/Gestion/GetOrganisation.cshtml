@model IEnumerable<Domain.Organisation>

<!-- Start Row -->
<div class="row">
    <!-- Start Panel -->
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-title">
                Liste des Organisations
            </div>
            <div class="panel-body table-responsive">
                <table id="example0" class="table display">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Description</th>
                            <th>Action</th>
                        </tr>
                    </thead>



                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td class="center">@item.libelle</td>
                                <td class="center">@item.description</td>


                                <td>

                                    <a href="@Url.Action("EditOrganisation", new { id = item.idOrganisation })">&nbsp;<i class="fa fa-edit" title="Modifer"></i></a>
                                    </td>

                            </tr>


                        }
                    </tbody>
                </table>
                <br /><p>
                    @Html.ActionLink("Ajouter une nouvelle Organisation", "CreateOrganisation")
                </p>

            </div>
        </div>
    </div>


</div>